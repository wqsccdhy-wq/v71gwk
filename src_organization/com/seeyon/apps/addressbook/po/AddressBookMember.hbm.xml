<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.seeyon.apps.addressbook.po">
  <class name="AddressBookMember" table="addressbook_member"  lazy="false">
      <id
        name="id"
        type="long"
        column="id"
        length="20"
    >
        <generator class="assigned" />
    </id>
     <property
        name="name"
        type="string"
        column="name"
        not-null="true"
        length="255"
    />
   <property
        name="companyName"
        type="string"
        column="company_name"
        length="255"
    />
    <property
        name="companyDept"
        type="string"
        column="company_dept"
        length="50"
    />
    <property
        name="companyLevel"
        type="string"
        column="company_level"
        length="50"
    />
    <property
        name="companyPost"
        type="string"
        column="company_post"
        length="50"
    />
    <property
        name="companyPhone"
        type="string"
        column="company_phone"
        length="20"
    />
     <property
        name="familyPhone"
        type="string"
        column="family_phone"
        length="20"
    />
    <property
        name="mobilePhone"
        type="string"
        column="mobilephone"
        length="20"
    />
     <property
        name="fax"
        type="string"
        column="fax"
        length="20"
    />
     <property
        name="address"
        type="string"
        column="address"
        length="255"
    />
     <property
        name="postcode"
        type="string"
        column="postcode"
        length="20"
    />    
     <property
        name="email"
        type="string"
        column="email"
        length="50"
    />
     <property
        name="website"
        type="string"
        column="website"
        length="255"
    />  
     <property
        name="blog"
        type="string"
        column="blog"
        length="255"
    />   
     <property
        name="msn"
        type="string"
        column="msn"
        length="50"
    />
     <property
        name="qq"
        type="string"
        column="qq"
        length="20"
    /> 
    <property
        name="creatorId"
        type="long"
        column="creator_id"
        not-null="true"
        length="20"
    />
    <property
        name="creatorName"
        type="string"
        column="creator_name"
        not-null="true"
        length="255"
    />
    <property
        name="createdTime"
        type="timestamp"
        column="created_time"
    />
        <property
        name="modifiedTime"
        type="timestamp"
        column="modified_time"
    />
    <property
        name="memo"
        type="string"
        column="memo"
    />
     <property
        name="category"
        type="long"
        column="category_id"
        length="20"
    />
    <!-- 
    <join table="addressbook_team_members" inverse="true" optional="true">
    	<key column="member_id"/>
    	<many-to-one name="category" column="team_id" not-null="true"/>
    </join>
     <many-to-one name="category" column="category_id" not-null="true"/>
     -->
  </class>
</hibernate-mapping>